{
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@compet-website/shared-types": ["packages/shared-types/src/index.ts"],
      "@compet-website/shared-types/*": ["packages/shared-types/src/*"],
      "@compet-website/environment": ["apps/server/src/environments/environment.ts"]
    }
  }
}
